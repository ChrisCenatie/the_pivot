<div class="container">
  <div id="page-wrapper">
    <div class="container-fluid">
      <div class="row">
      <div class="col-lg-12 text-center">
          <h1 id="page-header">Manage Farms</h1>
      </div>
      <div class="col-lg-12 text-center">
        <h2><%= link_to("Back to Dashboard", admin_dashboard_path) %></h2>
        <hr>
      </div>
      <h2>Farms</h2>
        <div class="col-lg-12">
            <div class="table-responsive">
                <table class="table table-bordered table-hover table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Current Status</th>
                            <th>Update Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%= render partial: "farmer", collection: @farmers %>
                    </tbody>
                </table>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>
