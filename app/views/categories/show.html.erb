<%= stylesheet_link_tag 'heroic-features', media: 'all', 'data-turbolinks-track' => true %>

  <!-- Page Content -->
<div class="container">

  <header id='categories'>

  <hr>

  <div class = "row">
    <div class="col-md-12 text-center">
      <h1><%= @category.name %></h1>
    </div>
  </div>
    <div class="row">
      <div class="col-lg-12">
        <% if current_user && current_user.admin? %>
          <p><%= link_to "Add Item", new_admin_item_path(@category), class: "btn btn-primary" %></p>
        <% end %>
      </div>
    </div>
  </header>

  <hr>

  <!-- Items -->
  <div class = "row">
  <% @category.items.each do |i| %>
    <div class="col-sm-4">
      <div class="thumbnail caption text-center">
        <img src=<%= i.image_url %> alt="">
        <h3><%= link_to i.name, category_item_path(@category.id, i.id) %></h3>
        <p><%= i.description %></p>
        <h4><%= number_to_currency(i.price) %></h4>
        <p>
          <%= button_to "Add #{i.name}" , cart_items_path(item_id: i.id), class: "btn btn-primary outline" %>
        </p>
          <% if current_user && current_user.admin? %>
            <%= link_to "Edit Item", edit_admin_item_path(i) %>
            <%= link_to "Delete Item", admin_item_path(i), method: :delete, data: {confirm: "Are you sure?"} %>
          <% end %>
      </div>
      </div>
  <% end %>
</div>
  <div class = "row">
    <div class = "col-md-offset-4 col-md-4 text-center">
      <h3><%= link_to "Categories", categories_path, class: "btn btn-lg btn-primary" %></h3>
      </div>
  </div>
</div>
  <!-- /.container -->

  <!-- jQuery -->
  <script src="js/jquery.js"></script>

  <!-- Bootstrap Core JavaScript -->
  <script src="js/bootstrap.min.js"></script>
