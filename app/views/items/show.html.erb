<div class = "container">
  <div class = "row">

    <div class="col-md-5">
        <h2><%= link_to "Back to TGI Friday's", categories_path %> </h2>
        <h4><%= link_to "#{@item.category.name}", @item.category %></h4>
        <div class="big-spacer"></div>
        <div class="big-spacer"></div>
        <div class="big-spacer"></div>

        <h3><%= @item.description %></h3>
        <div class="big-spacer"></div>
        <h2 class="text-center"><%= number_to_currency(@item.price) %></h2>
    </div>

    <div class = "col-md-7">
      <div class = "row">
      <div class= "img-responsive center-block">
        <img src=<%= @item.image_url %> alt="">
      </div>
        <div class="big-spacer"></div>
        <div class= "col-md-offset-2 col-md-3">
          <h4><%= link_to "Add",
            cart_items_path(item_id: @item.id),
            method: :patch %></h4>
        </div>
        <div class= "col-md-3">
          <h4><%= "Cart Qty: #{cart.cart_data[@item.id.to_s]}" %></h4>
        </div>
        <div class= "col-md-3">
          <h4><%= link_to "Remove",
            cart_items_path(item_id: @item.id),
            method: :delete %></h4>
        </div>
      </div>
    </div>

  </div>
</div>
