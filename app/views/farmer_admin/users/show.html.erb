<head>
    <link href="css/sb-admin.css" rel="stylesheet">
    <link href="css/plugins/morris.css" rel="stylesheet">
</head>

<body>

  <div class="container">
      <div id="page-wrapper">
          <div class="container-fluid">
              <div class="row">
                  <div class="col-lg-12">
                      <h1 id="page-header">
                          <%= current_user.farmer.name %> Dashboard <small>Statistics Overview</small>
                      </h1>
                  </div>
              </div>
              <hr>
              <div class="row-responsive well">
                  <h2 class="text-center">Tasks</h2>
              </div>
              </br>
              <div class="row">
                  <div class="col-md text-center" id="farm_management">
                      <h4><%= link_to("Edit #{current_user.farmer.name} Info", edit_farmer_admin_farmer_path(current_user.farmer)) %></h4>
                      <br>
                      <h4><%= link_to("Add Farmer Admin", new_farmer_admin_user_path) %></h4>
                      <br>
                      <h4>Current <%=current_user.farmer.name%> Admins</h3>
                      <% @farmer_admins.each do |farm_admin| %>
                        <p><%= farm_admin.full_name %></p>
                      <% end %>
                  </div>
              </div>
              <br>
              <hr>
              <div class="row-responsive text-left-center well">
                <h2 class="text-center">Orders</h2>
                <div class="row small">
                  <p>Status Filters:</p>
                </div>
                  <button class="completed-filter">Completed</button>
                  <button class="ordered-filter">Ordered</button>
                  <button class="paid-filter">Paid</button>
                  <button class="cancelled-filter">Cancelled</button>
                  <button class="all-filter">Show All</button>
              </div>
                  <div class="col-lg-12">
                      <div class="table-responsive">
                          <table class="table table-bordered table-hover table-striped">
                              <thead>
                                  <tr>
                                      <th>Order #</th>
                                      <th>Order Date</th>
                                      <th>Order Total</th>
                                      <th>Order Items</th>
                                      <th>Order Status</th>
                                      <th>Change Status</th>
                                  </tr>
                              </thead>
                              <tbody>
                                <% if @orders_data %>
                                  <%= render partial: "order" %>
                                <% end %>
                              </tbody>
                          </table>
                      </div>
                  </div>
              </div>
          </div>
      </div>
  </div>

    <script src="js/jquery.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/plugins/morris/raphael.min.js"></script>
    <script src="js/plugins/morris/morris.min.js"></script>
    <script src="js/plugins/morris/morris-data.js"></script>
    <script>
        $( ".completed-filter" ).click(function() {
          if($('tr.completed:hidden')){
              $('tr.completed').show('slow');
            };
          $( ".cancelled" ).hide("slow");
          $( ".ordered" ).hide("slow");
          $( ".paid" ).hide("slow");
        });
        $( ".ordered-filter" ).click(function() {
          if($('tr.ordered:hidden')){
              $('tr.ordered').show('slow');
            };
          $( ".cancelled" ).hide("slow");
          $( ".completed" ).hide("slow");
          $( ".paid" ).hide("slow");
        });
        $( ".paid-filter" ).click(function() {
          if($('tr.paid:hidden')){
              $('tr.paid').show('slow');
            };
          $( ".cancelled" ).hide("slow");
          $( ".ordered" ).hide("slow");
          $( ".completed" ).hide("slow");
        });
        $( ".cancelled-filter" ).click(function() {
          if($('tr.cancelled:hidden')){
              $('tr.cancelled').show('slow');
            };
          $( ".completed" ).hide("slow");
          $( ".ordered" ).hide("slow");
          $( ".paid" ).hide("slow");
        });
        $( ".all-filter" ).click(function() {
          $('.completed').show('slow');
          $( ".cancelled" ).show("slow");
          $( ".ordered" ).show("slow");
          $( ".paid" ).show("slow");
        });
  </script>

</body>
