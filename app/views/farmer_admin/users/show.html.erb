<head>
    <link href="css/sb-admin.css" rel="stylesheet">
    <link href="css/plugins/morris.css" rel="stylesheet">
</head>

<body>

  <div class="container">
      <div id="page-wrapper">
          <div class="container-fluid">
              <div class="row">
                  <div class="col-lg-12">
                      <h1 id="page-header">
                          <%= current_user.farmer.name %> Dashboard <small>Statistics Overview</small>
                      </h1>
                  </div>
              </div>
              <div class="row">
                  <h2 class="text-center">Tasks</h2>
                  <hr>
              </div>
              </br>
              <div class="row">
                  <div class="col-md text-center" id="farm_management">
                      <h4><%= link_to("Edit #{current_user.farmer.name} Info", edit_farmer_admin_farmer_path(current_user.farmer)) %></h4>
                      <br>
                      <h4><%= link_to("Add Farmer Admin", new_farmer_admin_user_path) %></h4>
                      <br>
                      <h4>Current <%=current_user.farmer.name%> Admins</h3>
                      <hr>
                      <% @farmer_admins.each do |farm_admin| %>
                        <p><%= farm_admin.full_name %></p>
                      <% end %>
                  </div>
              </div>
              <br>
              <h2 class="text-center">Orders</h2>
                  <div class="col-lg-12">
                      <div class="table-responsive">
                          <table class="table table-bordered table-hover table-striped">
                              <thead>
                                  <tr>
                                      <th>Order #</th>
                                      <th>Order Date</th>
                                      <th>Order Total</th>
                                      <th>Order Items</th>
                                      <th>Order Status</th>
                                      <th>Change Status</th>
                                  </tr>
                              </thead>
                              <tbody>
                                <% if @orders_data %>
                                  <%= render partial: "order" %>
                                <% end %>
                              </tbody>
                          </table>
                      </div>
                  </div>
              </div>
          </div>
      </div>
  </div>

    <script src="js/jquery.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/plugins/morris/raphael.min.js"></script>
    <script src="js/plugins/morris/morris.min.js"></script>
    <script src="js/plugins/morris/morris-data.js"></script>

</body>
