<%= stylesheet_link_tag 'heroic-features', media: 'all', 'data-turbolinks-track' => true %>
<br>
<br>
  <!-- Page Content -->
  <div class="container">
  <br>

  <!-- <div class="row"> -->
  <div class="col-md-4">
    <div class="well">
        <h2>Edit Business Information</h2>

        <br>

        <%= form_for @farmer, url: farmer_admin_farmer_path(@farmer), method: :patch do |f| %>
          <div class="form-group">
            <%= f.label "Name" %>
            <%= f.text_field :name, class: "form-control input-md", placeholder: @farmer.name %>
          <div class="form-group">
            <%= f.label "Image Url" %>
            <%= f.text_field :image_url, class: "form-control input-md", placeholder: @farmer.image_url %>
          </div>
          <div class="form-group">
            <%= f.submit "Update Item", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
  </div>
</div>
