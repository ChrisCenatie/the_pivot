<%= stylesheet_link_tag 'heroic-features', media: 'all', 'data-turbolinks-track' => true %>
<br>
<br>
  <!-- Page Content -->
  <div class="container">
  <br>

  <!-- <div class="row"> -->
  <div class="col-md-4">
    <div class="well">
        <h2>Edit Item</h2>

        <br>

        <%= form_for @item, url: farmer_admin_item_path(@item), method: :patch do |f| %>
          <div class="form-group">
            <%= f.label "Name" %>
            <%= f.text_field :name, class: "form-control input-md", placeholder: @item.name %>
          </div>
          <div class="form-group">
            <%= f.label "Description" %>
            <%= f.text_field :description, class: "form-control input-md", placeholder: @item.description %>
          </div>
          <div class="form-group">
            <%= f.label "Price" %>
            <%= f.text_field :price, class: "form-control input-md", placeholder: @item.price %>
          </div>
          <div class="form-group">
            <%= f.label "Image Url" %>
            <%= f.text_field :image_url, class: "form-control input-md", placeholder: @item.image_url %>
          </div>
          <div class="form-group">
            <%= f.label "Category" %><br>
            <%= f.collection_select :category_id, Category.all,:id,:name, include_blank: false, value: @category.name %>
          </div>
          <%= f.hidden_field :farmer_id, value: current_user.farmer.id %>
          <div class="form-group">
            <%= f.submit "Update Item", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
  </div>
</div>
