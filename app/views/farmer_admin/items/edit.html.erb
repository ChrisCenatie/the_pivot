<%= stylesheet_link_tag 'heroic-features', media: 'all', 'data-turbolinks-track' => true %>
<br>
<br>
  <!-- Page Content -->
  <div class="container">
  <br>

  <!-- <div class="row"> -->
  <div class="col-md-4">
    <div class="well">
        <h2>Edit Item</h2>

        <br>

        <%= form_for @item, url: farmer_admin_item_path(@item), method: :patch do |f| %>
          <div class="form-group">
            <%= f.label "Name" %>
            <%= f.text_field :name, class: "form-control input-md", placeholder: "Name" %>
          </div>
          <div class="form-group">
            <%= f.label "Description" %>
            <%= f.text_field :description, class: "form-control input-md", placeholder: "Description" %>
          </div>
          <div class="form-group">
            <%= f.label "Price" %>
            <%= f.text_field :price, class: "form-control input-md", placeholder: "Price" %>
          </div>
          <div class="form-group">
            <%= f.label "Image Url" %>
            <%= f.text_field :image_url, class: "form-control input-md", placeholder: "Image Url" %>
          </div>
          <%= f.hidden_field :category_id, value: @category.id %>
          <div class="form-group">
            <%= f.submit "Update Item", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
  </div>
</div>
